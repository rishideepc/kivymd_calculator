<MyRoot>

    calc_field: calc_field

    orientation: 'vertical'
    # padding: 30
    # spacing: 30
    # elevation: 8
    TextInput:
        id: calc_field
        height: 100
        size_hint: (1, None)
        readonly: True
        disabled: True
        font_size: 25
    GridLayout:
        rows: 4
        columns: 4
        padding: 30
        spacing: 30
        elevation: 8
        height: 400
        size_hint: (1, None)
        MDFloatingActionButton: 
            icon: "numeric-1"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('1')

        MDFloatingActionButton: 
            icon: "numeric-2"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('2')

        MDFloatingActionButton: 
            icon: "numeric-3"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('3')

        MDFloatingActionButton: 
            icon: "plus"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('+')

        MDFloatingActionButton: 
            icon: "numeric-4"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('4')

        MDFloatingActionButton: 
            icon: "numeric-5"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('5')

        MDFloatingActionButton: 
            icon: "numeric-6"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('6')

        MDFloatingActionButton: 
            icon: "minus"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('-')

        MDFloatingActionButton: 
            icon: "numeric-7"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('7')

        MDFloatingActionButton: 
            icon: "numeric-8"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('8')

        MDFloatingActionButton: 
            icon: "numeric-9"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('9')

        MDFloatingActionButton: 
            icon: "close"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('*')

        MDFloatingActionButton: 
            icon: "code-brackets"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('(')

        MDFloatingActionButton: 
            icon: "numeric-0"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('0')

        MDFloatingActionButton: 
            icon: "code-brackets"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol(')')

        MDFloatingActionButton: 
            icon: "slash-forward"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('/')

    BoxLayout:
        orientation: 'horizontal'
        padding: 50
        spacing: 50
        height: 100
        size_hint: (1, None)
        MDFloatingActionButton: 
            icon: "circle-small"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.calc_symbol('.')

        MDFloatingActionButton: 
            icon: "alpha-c-circle"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.clear()

        MDFloatingActionButton: 
            icon: "equal"
            md_bg_color: (0.75, 0.75, 0.75, 0.75)
            elevation_normal: 8
            on_press: root.get_result()